.well.text-center(style='margin-top: 70px;')
	p.lead Don't want to miss updates?
	button.btn.btn-primary.btn-md Subscribe to me feed

	//- a(href=blogurl + '/post/' + post.slug)= post.title

.panel.panel-default
	.panel-heading
		h4.panel-title Latests Posts
	ul.list-group
		each post, i in data.latestPosts
			li.list-group-item
				a(href=blogurl + '/post/' + post.slug) #{i+1}. #{post.title}

.panel.panel-default
	.panel-heading
		h4.panel-title Categories
	ul.list-group
		a(href=blogurl + '/', class=!data.category ? 'active' : false).list-group-item All
		each cat in data.categories
			//- a(href=blogurl + '/' + cat.key, class=data.category && data.category.id == cat.id ? 'active' : false).list-group-item= cat.name
			a(href=blogurl + '/' + cat.key, class=data.category && data.category.id == cat.id ? 'active' : false).list-group-item #{cat.name} #{cat.postCount}

